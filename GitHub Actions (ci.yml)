name: CI
on: [push, pull_request]
jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - uses: actions/setup-cmake@v3
      - name: Configure
        run: cmake -B build .
      - name: Build
        run: cmake --build build --config Release
      - name: Run Tests
        run: ctest --test-dir build --output-on-failure